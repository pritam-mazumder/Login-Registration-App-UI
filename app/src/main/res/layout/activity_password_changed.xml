<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PasswordChanged">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="248dp"
        app:srcCompat="@drawable/successmark" />

    <TextView
        style="@style/header"
        android:gravity="center"
        android:text="Password Changed!" />

    <TextView
        style="@style/headerdiscription"
        android:gravity="center"
        android:text="Your password has been changed\nsuccessfully." />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backToLogin"
        style="@style/blackbox"
        android:layout_marginTop="30dp"
        android:background="@drawable/blackbox"
        android:text="Back to Login" />

</LinearLayout>