<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.LoginRegistrationAppUI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.LoginRegistrationAppUI" parent="Base.Theme.LoginRegistrationAppUI" />

    <style name="blackbox" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:background">@drawable/blackbox</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whitebox" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:background">@drawable/whitebox</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="footertextgroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="coloredfootertext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bluegreen</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="footertext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="back">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginTop">56dp</item>
        <item name="android:layout_marginLeft">22dp</item>
    </style>

    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">39dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:fontFamily">@font/cabin_bold</item>
        <item name="android:textSize">39sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerdiscription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="emptyrelativelayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
    </style>

    <style name="emptybox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/emptybox</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#818181</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/cabin</item>
    </style>

    <style name="iconbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>